    "#### HOLDING TABLE CREATION ####\n",
    "from hdbcli import dbapi\n",
    "\n",
    "print('Connecting...')\n",
    "#Connect to HANA\n",
    "conn = dbapi.connect(key='hanakey',CONNECTTIMEOUT=10000)\n",
    "print('Connected!')\n",
    "cursor=conn.cursor()\n",
    "\n",
    "#Drop Table\n",
    "cursor.executemany('''Drop Table \"<<QUERY_LOCATION>>";''', ())\n",
    "print('Table Dropped')\n",
    "\n",
    "#Create Holding Table\n",
    "cursor.executemany('''create column table \"<<QUERY_LOCATION>>\" (\"Amount\" DECIMAL, \"AmtWFee\" DECIMAL,\n",
    "\"SalesOffice\" VARCHAR (5),\"Customer\" VARCHAR (12),\"Name\" VARCHAR (60), \"Street\" VARCHAR (45), \"CitySt\" VARCHAR (45), \n",
    "\"Zip\" VARCHAR (12), \"Tel\" VARCHAR (15), \"AcctClerk\" VARCHAR (45), \"SlsRepNum\" VARCHAR (15), \"SlsRep\" VARCHAR (45),\n",
    "\"SlsRepEMail\" VARCHAR (60), \"SlsRManager\" VARCHAR (45), \"SlsRManagerEMail\" VARCHAR (60), \"DateofLetter\" DATE,\n",
    "\"DocumentDate\" DATE, \"Arrears\" NUMERIC, \"XBLOCKED\" VARCHAR (15), \"BLOCK_REASON\" VARCHAR (25), \"DocNumber\" VARCHAR (15),\n",
    "\"BusTypeExt\" VARCHAR (25), \"UniqueID\" VARCHAR (50), \"SourceFlag\" VARCHAR (20)\n",
    "\n",
    "\n",
    "\n",
    ");''',())\n",
    "print('Table Created!')"
   ]
  }
