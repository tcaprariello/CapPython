    "import pandas as pd\n",
    "from datetime import date, timedelta\n",
    "import os\n",
    "import sys\n",
    "import numpy as np\n",
    "from hdbcli import dbapi\n",
    "import glob\n",
    "import re\n",
    "import win32com.client as win32\n",
    "\n",
    "#Reset Prev Day x File\n",
    "#print('Updating Previous Day...')\n",
    "#directory=r'<<FILEPATH>>.xlsx'\n",
    "#a=pd.read_excel(directory)\n",
    "#a=a.reset_index(drop=True)\n",
    "#a=a[['Amount','AmtWFee','SalesOffice','Customer','Name','Street','CitySt','Zip','Tel','AcctClerk','SlsRepNum','SlsRep',\n",
    "#  'SlsRepEMail','SlsRManager','SlsRManagerEMail','DateofLetter','DocumentDate','Arrears','XBLOCKED','BLOCK_REASON',\n",
    "#  'DocNumber','BusTypeExt','UniqueID','SourceFlag']]\n",
    "\n",
    "#a.to_excel(r'<<FILEPATH>>.xlsx')\n",
    "#print('Previous Day x Updated!')\n",
    "\n",
    "#Connect to Package and HANA\n",
    "sys.path.insert(1,r'<<DIRECTORY>>\\Python\\Modules')\n",
    "from HanaConnection import Hana_Query\n",
    "print('Connection Established to SAP HANA!')\n",
    "\n",
    "#Run Query\n",
    "print('Loading x Query...')\n",
    "query1 = '''\n",
    "select *, 'x' as \"SourceFlag\"\n",
    "from \"<<QUERY_LOCATION>>\"\n",
    "'''\n",
    "print('Query Successfully Executed, Creating Dataframe...')\n",
    "df = Hana_Query.execute_query('<<USERNAME>>','<<PASSWORD>>',query1)\n",
    "print('Dataframe Created!')\n",
    "\n",
    "conn = dbapi.connect(key='hanakey',CONNECTTIMEOUT=10000)\n",
    "print('Connected to Holding Table!')\n",
    "cursor=conn.cursor()\n",
    "\n",
    "#Record History In Holding\n",
    "print('Grabbing Current Holding Data...')\n",
    "query2 = ('''select * from \"<<QUERY_LOCATION>>"''')\n",
    "df2 = Hana_Query.execute_query('<<USERNAME>>','<<PASSWORD>>',query2)\n",
    "print('Grabbed, appending to new data...')\n",
    "\n",
    "history = df2.append(df,sort=False)\n",
    "history=history.drop_duplicates(subset=['UniqueID'])\n",
    "print('Data Joined and Dups Removed')\n",
    "\n",
    "#Insert Data Into Holding Table\n",
    "cursor.executemany('''delete from \"<<QUERY_LOCATION>>"''')\n",
    "print('Holding Table Cleared!')\n",
    "print('Inserting Data...')\n",
    "subset = df[['Amount','AmtWFee','SalesOffice','Customer','Name','Street','CitySt','Zip','Tel','AcctClerk','SlsRepNum',\n",
    "            'SlsRep','SlsRepEMail','SlsRManager','SlsRManagerEMail','DateofLetter','DocumentDate','Arrears','XBLOCKED',\n",
    "            'BLOCK_REASON','DocNumber','BusTypeExt','UniqueID','SourceFlag']]\n",
    "tuples = [tuple(x) for x in subset.to_numpy()]\n",
    "cursor.executemany('''INSERT INTO \"<<QUERY_LOCATION>>" (\"Amount\",\"AmtWFee\", \"SalesOffice\", \"Customer\",\n",
    "\"Name\",\"Street\",\"CitySt\",\"Zip\",\"Tel\",\"AcctClerk\",\"SlsRepNum\",\"SlsRep\",\"SlsRepEMail\",\"SlsRManager\",\"SlsRManagerEMail\",\n",
    "\"DateofLetter\",\"DocumentDate\", \"Arrears\",\"XBLOCKED\", \"BLOCK_REASON\",\"DocNumber\",\"BusTypeExt\",\"UniqueID\",\"SourceFlag\")\n",
    "Values(?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)''', (tuples))\n",
    "print('Data Inserted!')\n",
    "\n",
    "#Export To Excel and Read Back In\n",
    "df.to_excel(r'<<FILEPATH>>.xlsx')\n",
    "currDF = r'<<FILEPATH>>.xlsx'\n",
    "curr=pd.read_excel(currDF)\n",
    "curr=curr[['Amount','AmtWFee','SalesOffice','Customer','Name','Street','CitySt','Zip','Tel','AcctClerk','SlsRepNum','SlsRep',\n",
    "  'SlsRepEMail','SlsRManager','SlsRManagerEMail','DateofLetter','DocumentDate','Arrears','XBLOCKED','BLOCK_REASON',\n",
    "  'DocNumber','BusTypeExt','UniqueID','SourceFlag']]\n",
    "print('Current Day Exported and Re-Read!')\n",
    "\n",
    "#Read In Yesterday's Results\n",
    "prevDF = r'<<FILEPATH>>.xlsx'\n",
    "prev=pd.read_excel(prevDF)\n",
    "prev=prev[['Amount','AmtWFee','SalesOffice','Customer','Name','Street','CitySt','Zip','Tel','AcctClerk','SlsRepNum','SlsRep',\n",
    "  'SlsRepEMail','SlsRManager','SlsRManagerEMail','DateofLetter','DocumentDate','Arrears','XBLOCKED','BLOCK_REASON',\n",
    "  'DocNumber','BusTypeExt','UniqueID','SourceFlag']]\n",
    "print('Prev. Day Read!')\n",
    "\n",
    "#Join Dataframes Together\n",
    "print('Appending Dataframes...')\n",
    "unique=curr[~(curr['UniqueID'].isin(list(prev['UniqueID'])))]\n",
    "#joined=curr.append(prev,sort=False)\n",
    "print('Previous and Current Appended!')\n",
    "\n",
    "#Drop Duplicates and Export\n",
    "print('Dropping Existing Rows...')\n",
    "today=str(date.today())\n",
    "\n",
    "print('Only New Rows Remain, Exporting...')\n",
    "unique.to_excel(r'<<FILEPATH>>'+today+'.xlsx',sheet_name='<<SHEETNAME>>',index=False)\n",
    "print('Exported!')\n",
    "\n",
    "#print(len(unique)+' responses today!')\n",
    "\n",
    "#Send Email With X Report to AR Collections Group\n",
    "folder=r'<<FILEPATH>>'\n",
    "attachment=max([os.path.join(folder,d) for d in os.listdir(folder)], key=os.path.getmtime)\n",
    "attachment=attachment.replace(\"\\\\\",\"/\")\n",
    "outlook = win32.Dispatch('outlook.application')\n",
    "mail = outlook.CreateItem(0)\n",
    "mail.To = '<<EMAIL ADDRESSES>>'\n",
    "mail.CC = '<<EMAIL ADDRESS>'\n",
    "mail.Subject  = today+ ' Report'\n",
    "if len(unique)>0:\n",
    "    mail.Body = ('Good Morning, Attached is the X Report for ' +today+'. If you have any questions, please let me know.')\n",
    "    mail.Attachments.Add(attachment)\n",
    "else:\n",
    "    mail.Body = ('Good Morning, The X Report returned blank this morning. Have a great day!')\n",
    "mail.Display(True)\n",
    "\n",
   ]
